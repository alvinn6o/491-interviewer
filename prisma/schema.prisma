generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth Tables (Required for Authentication)
// ============================================

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String              @id @default(cuid())
  name              String?
  email             String?             @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  accounts          Account[]
  sessions          Session[]
  profile           UserProfile?
  resumeAnalyses    ResumeAnalysis[]
  interviewSessions InterviewSession[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// User Profile (Optional Extended Info)
// ============================================

model UserProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName       String?
  lastName        String?
  phoneNumber     String?
  emailAddress    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ============================================
// Resume Scanner Feature
// ============================================

model ResumeAnalysis {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resumeName     String
  jobDescription String?
  atsScore       Int?
  matchScore     Float?
  feedback       Json
  analyzedAt     DateTime @default(now())

  @@index([userId])
}

// ============================================
// Interview Features (Behavioral & Technical)
// ============================================

model InterviewSession {
  id            String              @id @default(cuid())
  userId        String
  user          User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          InterviewType
  status        SessionStatus       @default(IN_PROGRESS)
  startedAt     DateTime            @default(now())
  completedAt   DateTime?
  overallScore  Float?
  feedback      Json?
  responses     InterviewResponse[]

  @@index([userId])
}

model InterviewResponse {
  id         String           @id @default(cuid())
  sessionId  String
  session    InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question   String
  answer     String
  score      Float?
  feedback   String?
  answeredAt DateTime         @default(now())

  @@index([sessionId])
}

model TechnicalQuestion {
  id         String   @id @default(cuid())
  question   String
  difficulty String
  category   String
  answer     String?
  createdAt  DateTime @default(now())
}

// ============================================
// Enums
// ============================================

enum InterviewType {
  BEHAVIORAL
  TECHNICAL
}

enum SessionStatus {
  IN_PROGRESS
  COMPLETED
  ABANDONED
}
